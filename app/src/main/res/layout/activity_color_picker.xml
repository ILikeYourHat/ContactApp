<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/common_padding"
    tools:context=".ui.screen.colorpicker.ColorPickerActivity">

    <ImageView
        android:id="@+id/activityColorPicker_ivRed"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:contentDescription="@string/activityColorPicker_colorRed"
        android:src="@color/red"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/activityColorPicker_ivGreen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/activityColorPicker_ivGreen"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:contentDescription="@string/activityColorPicker_colorGreen"
        android:src="@color/green"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/activityColorPicker_ivBlue"
        app:layout_constraintStart_toEndOf="@+id/activityColorPicker_ivRed"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/activityColorPicker_ivBlue"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:contentDescription="@string/activityColorPicker_colorBlue"
        android:src="@color/blue"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activityColorPicker_ivGreen"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>